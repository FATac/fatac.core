<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:monkey="http://namespaces.plone.org/monkey"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="fatac.core">

  <five:registerPackage package="." initialize=".initialize" />

  <include package="fatac.theme" />
  <include package="fatac.forms" />
  <include package="fatac.content" />
  <include package="Products.LinguaPlone" />

  <include package="collective.monkeypatcher" />

  <monkey:patch
      description="Enabling comments for content type fatac.dummy"
      class="plone.app.discussion.browser.conversation.ConversationView"
      original="enabled"
      replacement=".patches.enabled"
      />

  <!-- Override default personal-information form -->
  <browser:page
    for="Products.CMFPlone.Portal.PloneSite"
    name="personal-information"
    class=".userdataschema.CustomizedUserDataPanel"
    layer="fatac.theme.browser.interfaces.IThemeSpecific"
    permission="cmf.SetOwnProperties"
    />

  <!-- Override default change-password form -->
  <browser:page
    for="plone.app.layout.navigation.interfaces.INavigationRoot"
    name="change-password"
    class=".userdataschema.CustomizedPasswordAccountPanel"
    layer="fatac.theme.browser.interfaces.IThemeSpecific"
    permission="cmf.SetOwnPassword"
    />

  <genericsetup:registerProfile
      name="default"
      title="fatac.core"
      directory="profiles/default"
      description="Installs the fatac.core package"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

</configure>
